<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:text="Are you sure to delete profile picture?"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <Button android:id="@+id/btn_confirm_delete"
        android:text="Confirm" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="12dp" />
</LinearLayout>
